<UserControl x:Class="NullVoidCreations.Janitor.Shell.Views.ComputerScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:NullVoidCreations.Janitor.Shell.ViewModels"
             xmlns:wpf="http://schemas.microsoft.com/wpf/2008/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <UserControl.DataContext>
        <vm:ComputerScanViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--header-->
        <Border Style="{StaticResource ResourceKey=HeaderStyle}">
            <TextBlock Text="Computer Scan" Style="{StaticResource ResourceKey=HeaderTitleStyle}" />
        </Border>

        <!--active scan area-->
        <Border Style="{StaticResource ResourceKey=ActiveAreaStyle}" 
                Grid.Row="1">
            <Border.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="11" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Foreground" Value="{StaticResource ResourceKey=TextBrush}" />
                </Style>
            </Border.Resources>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Margin="0 0 8 0" Source="/NullVoidCreations.Janitor.Shell;component/Resources/ScanAlternate.png" />
                <TextBlock Text="{Binding Path=ActiveScan.Type, Mode=OneWay, FallbackValue='Not Scanning'}" Grid.Column="1" FontSize="12" FontWeight="Bold" />
                <ProgressBar Grid.Column="2" />
                
                <Button Grid.Column="3" Margin="4 0 0 0" Style="{StaticResource ResourceKey=ImageButtonStyle}" ToolTip="Stop Scan">
                    <Image Source="/NullVoidCreations.Janitor.Shell;component/Resources/Stop.png" />
                </Button>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="0 20 0 0">
                    <TextBlock Text="Issues Found: "  />
                    <TextBlock Text="{Binding Path=ActiveScanProgress.IssueCount, Mode=OneWay, FallbackValue=0}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=BadBrush}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">
                    <TextBlock Text="Targets Scanned: " />
                    <TextBlock Text="{Binding Path=ActiveScanProgress.AreaScanned, Mode=OneWay, FallbackValue=0}" Foreground="{StaticResource ResourceKey=TextAlternateBrush}"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
                    <TextBlock Text="Areas Scanned: "  />
                    <TextBlock Text="{Binding Path=ActiveScanProgress.AreaScanned, Mode=OneWay, FallbackValue=0}" Foreground="{StaticResource ResourceKey=TextAlternateBrush}"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3">
                    <TextBlock Text="Scanning: " />
                    <TextBlock Text="{Binding Path=ActiveScanProgress.Target.Name, Mode=OneWay, FallbackValue=''}" Foreground="{StaticResource ResourceKey=TextAlternateBrush}"  />
                    <TextBlock Text="{Binding Path=ActiveScanProgress.Area.Name, Mode=OneWay, FallbackValue='', StringFormat=' ({0})...'}" Foreground="{StaticResource ResourceKey=TextAlternateBrush}"  />
                </StackPanel>
                
                <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="0 8 0 0" TextWrapping="Wrap" Text="The following list contains issues that were found during a computer scan and must be cleaned to ensure system performance." />

                <wpf:DataGrid Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Margin="0 8 0 0" ItemsSource="{Binding Path=ActiveScan.Issues, Mode=OneWay}" Foreground="{StaticResource ResourceKey=BadBrush}">
                    <wpf:DataGrid.Columns>
                        <wpf:DataGridTemplateColumn Header="Details" Width="280" MinWidth="280">
                            <wpf:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Details, Mode=OneWay}" 
                                               TextTrimming="CharacterEllipsis" 
                                               Padding="6 0 2 0" 
                                               ToolTip="{Binding Path=Details, Mode=OneWay}" />
                                </DataTemplate>
                            </wpf:DataGridTemplateColumn.CellTemplate>
                        </wpf:DataGridTemplateColumn>
                        <wpf:DataGridTemplateColumn Header="Target" MinWidth="100" Width="100">
                            <wpf:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Target.Name, Mode=OneWay}" 
                                               TextTrimming="CharacterEllipsis" 
                                               Padding="6 0 2 0" 
                                               ToolTip="{Binding Path=Target.Name, Mode=OneWay}"/>
                                </DataTemplate>
                            </wpf:DataGridTemplateColumn.CellTemplate>
                        </wpf:DataGridTemplateColumn>
                        <wpf:DataGridTemplateColumn Header="Area" MinWidth="100" Width="100">
                            <wpf:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Area.Name, Mode=OneWay}" 
                                               TextTrimming="CharacterEllipsis" 
                                               Padding="6 0 2 0" 
                                               ToolTip="{Binding Path=Area.Name, Mode=OneWay}"/>
                                </DataTemplate>
                            </wpf:DataGridTemplateColumn.CellTemplate>
                        </wpf:DataGridTemplateColumn>
                    </wpf:DataGrid.Columns>
                </wpf:DataGrid>
            </Grid>
        </Border>

        <!--scan buttons-->
        <Grid Grid.Row="2" Margin="20 20 20 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0 0 20 20" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter ContentSource="Content" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="TextBlock" x:Key="ScanNameStyle">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="{StaticResource ResourceKey=TextAlternateBrush}" />
                    <Setter Property="Margin" Value="8 0 0 0" />
                </Style>
                <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=ScanNameStyle}" x:Key="ScanDescriptionStyle">
                    <Setter Property="FontSize" Value="11" />
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="Foreground" Value="{StaticResource ResourceKey=TextBrush}" />
                </Style>
                <Style TargetType="Image">
                    <Setter Property="VerticalAlignment" Value="Top" />
                </Style>
            </Grid.Resources>
            <Button Command="{Binding Path=SmartScan, Mode=OneTime}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Grid.RowSpan="2" Source="/NullVoidCreations.Janitor.Shell;component/Resources/ScanFull.png" />
                    <TextBlock Grid.Column="1" Style="{StaticResource ResourceKey=ScanNameStyle}" Text="{Binding Path=SmartScan.Title, Mode=OneTime}" />
                    <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ResourceKey=ScanDescriptionStyle}" Text="{Binding Path=SmartScan.Description, Mode=OneTime}"  />
                </Grid>
            </Button>
            <Button Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Grid.RowSpan="2" Source="/NullVoidCreations.Janitor.Shell;component/Resources/ScanCustom.png" />
                    <TextBlock Grid.Column="1" Style="{StaticResource ResourceKey=ScanNameStyle}" Text="Custom Scan..." />
                    <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ResourceKey=ScanDescriptionStyle}" Text="Perform a system scan looking only the selected scan targets for issues."  />
                </Grid>
            </Button>
            <Button Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Grid.RowSpan="2" Source="/NullVoidCreations.Janitor.Shell;component/Resources/ScanRepeat.png" />
                    <TextBlock Grid.Column="1" Style="{StaticResource ResourceKey=ScanNameStyle}" Text="Repeat Last Scan" />
                    <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ResourceKey=ScanDescriptionStyle}" Text="Action: Smart Scan"  />
                    <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource ResourceKey=ScanDescriptionStyle}" Text="Last Record: 12/07/2016 03:03:00"  />
                </Grid>
            </Button>
        </Grid>
    </Grid>
</UserControl>
