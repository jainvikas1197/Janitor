<UserControl x:Class="NullVoidCreations.Janitor.Shell.Views.StartupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpf="http://schemas.microsoft.com/wpf/2008/toolkit"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="11" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{StaticResource ResourceKey=TextBrush}" />
            </Style>
            <Style x:Key="LabelStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="{StaticResource ResourceKey=TextBrush}" />
                <Setter Property="Margin" Value="20 4 20 0" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  header  -->
        <Border Grid.ColumnSpan="2" Style="{StaticResource ResourceKey=HeaderStyle}">
            <TextBlock Style="{StaticResource ResourceKey=HeaderTitleStyle}" Text="Startup" />
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Margin="20 20 20 0"
                   Text="The following list contains programs that are set to run when your computer starts. To improve your PC performance, remove unwanted programs from startup."
                   TextWrapping="Wrap" />

        <wpf:DataGrid Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Margin="20 20 20 0"
                      Foreground="{StaticResource ResourceKey=TextBrush}"
                      ItemsSource="{x:Null}">
            <wpf:DataGrid.Columns>
                <wpf:DataGridTemplateColumn Width="360" Header="Details">
                    <wpf:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid Margin="6 0 2 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Width="16"
                                       Height="16"
                                       Margin="0 0 2 0"
                                       Source="{Binding Path=Target.IconSource,
                                                        Mode=OneWay}"
                                       ToolTip="{Binding Path=Target.Name,
                                                         Mode=OneWay}" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Path=Details,
                                                          Mode=OneWay}"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Path=Details,
                                                             Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </wpf:DataGridTemplateColumn.CellTemplate>
                </wpf:DataGridTemplateColumn>
                <wpf:DataGridTemplateColumn Width="100" Header="Area">
                    <wpf:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Padding="6 0 2 0"
                                       Text="{Binding Path=Area.Name,
                                                      Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Path=Area.Name,
                                                         Mode=OneWay}" />
                        </DataTemplate>
                    </wpf:DataGridTemplateColumn.CellTemplate>
                </wpf:DataGridTemplateColumn>
            </wpf:DataGrid.Columns>
        </wpf:DataGrid>

        <TextBlock Grid.Row="3"
                   Margin="20 20 20 0"
                   Style="{StaticResource ResourceKey=LabelStyle}"
                   Text="File:" />
        <TextBlock Grid.Row="4"
                   Style="{StaticResource ResourceKey=LabelStyle}"
                   Text="File Size:" />
        <TextBlock Grid.Row="5"
                   Style="{StaticResource ResourceKey=LabelStyle}"
                   Text="File Description:" />
        <TextBlock Grid.Row="6"
                   Style="{StaticResource ResourceKey=LabelStyle}"
                   Text="Company Name:" />
        <TextBlock Grid.Row="7"
                   Style="{StaticResource ResourceKey=LabelStyle}"
                   Text="File Version:" />
        <TextBlock Grid.Row="8"
                   Margin="20 4 20 20"
                   Style="{StaticResource ResourceKey=LabelStyle}"
                   Text="Product Name:" />
    </Grid>
</UserControl>
